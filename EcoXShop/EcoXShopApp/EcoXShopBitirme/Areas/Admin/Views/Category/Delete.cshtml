    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* <h1>Kategori Sil</h1> *@

<br />
<div class="row">
    <div class="col-md-3">

    </div>
    <div class="col-md-6">
        <h3>Bu kategoriyi silmek istediğinize emin misiniz?</h3>
    </div>
    
</div>

<div class="container">
    @* <h4>Kategori Adı</h4> *@
    <hr />
    
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-3">
            <dl class="row">

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
