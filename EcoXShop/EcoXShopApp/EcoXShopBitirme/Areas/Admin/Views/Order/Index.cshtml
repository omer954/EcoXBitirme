@model IEnumerable<EcoXShopBitirme.Models.OrderHeader>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <div class="row">
        <div class="col-md-4">

            
        </div>
        <div class="col-md-4">

            <h2 class="text-primary">Sipariş Listesi</h2>
        </div>
        <div class="col-md-4">

            
        </div>
    </div>
    
</div>
<br />
@if (User.IsInRole(Diger.Role_Admin))
{
    <div class="btn-group d-grid gap-2 d-md-flex justify-content-md-center" role="group" aria-label="Basic outlined example">
        <a asp-action="Beklenen" asp-area="Admin" asp-controller="Order" type="button" type="button" class="btn btn-outline-primary text-white">Beklenen Siparişler</a>
        <a asp-action="Onaylanan" asp-area="Admin" asp-controller="Order" type="button" type="button" class="btn btn-outline-primary text-white">Onaylanan Siparişler</a>
        <a asp-action="Kargolanan" asp-area="Admin" asp-controller="Order" type="button" type="button" class="btn btn-outline-primary text-white">Kargolanan Siparişler</a>
        <a asp-action="Index" asp-area="Admin" asp-controller="Order" type="button" class="btn btn-outline-primary active text-white">Tüm Siparişler</a>
    </div>

}
else
{
    <div class="container">
        
        <a asp-action="Index" asp-area="Admin" asp-controller="Order" type="button" class="btn btn-outline-primary active text-white">Tüm Siparişler</a>
    </div>

}


<br />
<div class="container">

    <table class="table table-striped table-bordered" id="myTable">
        <thead>
            <tr>
                <th>
                    Adı
                </th>
                <th>
                    Soyadı
                </th>
                <th>
                    Telefon
                </th>

                <th>
                    Durum
                </th>
                <th>
                    Sipariş Tarihi
                </th>
                <th>
                    Toplam Tutar
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Surname
                    </td>
                    <td>
                        @item.PhoneNumber
                    </td>

                    <td>
                        @item.OrderStatus
                    </td>
                    <td>
                        @item.OrderDate
                    </td>
                    <td>
                        @item.OrderTotal
                    </td>
                    <td>
                        
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success text-white"><i class="bi bi-pencil-fill"></i> Detay</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script type="text/javascript">
        var table = $('#myTable').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'excel', 'pdf'
            ]
        });
    </script>

}


