
@{
    ViewData["Title"] = "SiparisTamam";
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name='copyright' content=''>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Title Tag  -->
    <title>EcoX Shop</title>
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/template/EcoXShopLogoIcon.png">
    <style>
        body {
            margin: 0;
			padding: 0;
            background-image: url("/template/images/body login arkaplan.jpg");
            background-size: cover;
            /*background-position: center;*/
            font-family: Arial, sans-serif;
            background-repeat: no-repeat;
            
        }
        /* Bildirim stilini özelleştirebilirsiniz */
        #notification {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 20px;
            background-color: #4CAF50;
            color: white;
            text-align: center;
            z-index: 1000;
			
			
        }
    </style>
</head>
<body>

    <!-- Diğer sayfa içeriği burada olacak -->
    <!-- Bildirim div'i -->
    <div id="notification">
        <p>Daha yeşil bir dünya için, sürdürülebilirliğe yöneldiğiniz için teşekkür ederiz!</p>
    </div>


<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Sipariş oluşturulduğunda çağrılacak fonksiyon
        function showNotification() {
            var notification = document.getElementById("notification");
            

            // Bildirimi göster
            notification.style.display = "block";

            // 3 saniye sonra anasayfaya yönlendir
            setTimeout(function () {
               
                window.location.href = "/Customer/Customer/Index";
            }, 3000);
        }

        // Sipariş oluşturuldu bildirimi
        showNotification();
    });
 </script>

</body>
</html>