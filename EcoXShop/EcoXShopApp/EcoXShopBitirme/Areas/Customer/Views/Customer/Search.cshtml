@model IEnumerable<EcoXShopBitirme.Models.Product>
@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        @await Component.InvokeAsync("CategoryList")
        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="card">
                        <div class="card-header">
                            @item.Title
                        </div>
                        @if (item.Image == null)
                        {
                            <img src="~/template/images/product/boşgörsel.jpg" class="card-img-top" alt="..." style="height:200px">
                        }
                        else
                        {
                            <img src="@item.Image" class="card-img-top" alt="..." style="height:200px">
                        }
                        <div class="card-body">
                            <p class="card-text">@item.Description</p>
                        </div>
                        <div class="card-footer">
                            <label style="font-size:20px;color:crimson"><b>@item.Price.ToString("0.00") ₺</b></label>
                            <a asp-action="Details" asp-controller="Customer" asp-route-id="@item.Id" class="btn btn-outline-info text-white" style="float:right">Detay</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="d-flex align-items-center justify-content-center">
                <div class="alert alert-warning text-center">
                    
                    Arama kriterlerinizle eşleşen herhangi bir ürün bulunmamaktadır...
                   
                </div>
            </div>
        }
        

    </div>
</div>
